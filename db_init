CREATE DATABASE joga_sequelize
CHARACTER SET utf8mb4
COLLATE utf8mb4_unicode_ci;

GRANT ALL PRIVILEGES ON joga_sequelize.* TO 'dbuser'@'localhost';

FLUSH PRIVILEGES;

npx sequelize-cli model:generate --name Article --attributes id:integer,name:string,slug:string,image:string,body:text,published:date,author_id:integer
npx sequelize-cli db:migrate
npx sequelize-cli migration:create --name modify_article_fields
npx sequelize-cli seed:generate --name demo-articles
npx sequelize-cli db:seed:all
npx sequelize-cli model:generate --name Authors --attributes id:integer,name:string
npx sequelize-cli db:migrate
npx sequelize-cli migration:create --name modify_author_fields
npx sequelize-cli seed:generate --name demo-authors
npx sequelize-cli db:seed:all

npx sequelize-cli db:drop
npx sequelize-cli db:create
npx sequelize-cli db:migrate
npx sequelize-cli db:seed:all

npx sequelize-cli model:generate --name Tags --attributes id:integer,name:string
npx sequelize-cli seed:generate --name demo-tags

npx sequelize-cli model:generate --name ArticleTags --attributes articleId:integer,tagId:integer
npx sequelize-cli seed:generate --name demo-articleTags